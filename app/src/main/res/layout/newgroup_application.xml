<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_application_top"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:weightSum="6"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="목표 측정"
            android:textSize="@dimen/application_font"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id = "@+id/new_type0"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="시간 측정"
                android:background="@drawable/cardview_rectangular"
                android:backgroundTint="@color/material_blue"
                />
            <Button
                android:id="@+id/new_type1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_rectangular"
                android:layout_margin="20dp"
                android:text="횟수 입력"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="그룹 이름"
            android:textSize="@dimen/application_font"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id = "@+id/new_group_name"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="ex) 주당 100시간 몰입"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="목표"
            android:textSize="@dimen/application_font"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <Spinner
                android:id="@+id/new_period_unit"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:entries="@array/period_unit"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/new_goal"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="10"
                android:gravity="center"
                android:inputType="number"
                />

            <EditText
                android:id="@+id/new_unit"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="회"
                android:gravity="center"
                android:inputType="text"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="성공 단위"
            android:textSize="@dimen/application_font"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/new_index"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:hint="ex) JBG"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="시작 날짜"
            android:textSize="@dimen/application_font"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/new_start_date"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:text="2020-01-01"
                android:inputType="date"
                />

            <EditText
                android:id="@+id/new_end_date"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:text="2020-01-01"
                android:inputType="date"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="멤버 초대"
            android:textSize="@dimen/application_font"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/party_detail_member_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>