<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/grouplist_info"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@id/grouplist_personal_info"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/click_group_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:textSize="30dp"
                            android:text='그룹이름'/>
                        <ImageView
                            android:id="@+id/click_template"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/com_facebook_profile_picture_blank_square"/>
                            <!--템플릿 아이콘 바꾸기-->
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/click_period_unit"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:textSize="25dp"
                                android:text="주당"/>
                            <TextView
                                android:id="@+id/click_goal"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="25dp"
                                android:text="100"/>
                            <TextView
                                android:id="@+id/click_unit"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:textSize="25dp"
                                android:layout_marginLeft="10dp"
                                android:text="시간"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/click_period_start"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:textSize="25dp"
                                android:text="2020/07/23"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="25dp"
                                android:text="-"/>
                            <TextView
                                android:id="@+id/click_period_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="25dp"
                                android:layout_marginLeft="10dp"
                                android:text="2020/08/06"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="단위"
                            android:layout_marginRight="10dp"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/click_goal_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="JBG"
                            android:layout_marginRight="20dp"
                            android:textSize="20dp"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/group"/>
                        <TextView
                            android:id="@+id/click_members"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textSize="20dp"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/grouplist_info"
                android:id="@+id/grouplist_personal_info">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:text='나의 기록'/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/grouplist_clicked_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/grouplist_info"
                android:id="@+id/grouplist_groupranking">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:text='그룹 랭킹'/>
                        <EditText
                            android:layout_marginLeft="50dp"
                            android:id="@+id/serach_index"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1"/>
                        <Spinner
                            android:id="@+id/rank_period_unit"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:entries="@array/rank_period_unit"
                            android:textAlignment="center"/>
                        <Button
                            android:id="@+id/rank_search"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/search" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/grouplist_clicked_rank_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>